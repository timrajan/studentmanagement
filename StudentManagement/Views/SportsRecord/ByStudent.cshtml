@model List<StudentManagement.Models.SportsRecord>

<!DOCTYPE html>
<html>
<head>
    <title>Sports Records - @ViewBag.StudentName</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            background-color: #f5f5f5;
        }

        h1 {
            color: #333;
            border-bottom: 3px solid #FF5722;
            padding-bottom: 10px;
        }

        .summary-box {
            background: linear-gradient(135deg, #FF5722 0%, #FF9800 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
        }

        .summary-box h2 {
            margin: 0 0 10px 0;
        }

        .record-card {
            background-color: white;
            padding: 20px;
            margin: 15px 0;
            border-left: 5px solid #FF5722;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .record-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .sport-name {
            font-size: 20px;
            font-weight: bold;
            color: #2c3e50;
        }

        .hours-badge {
            background-color: #FF5722;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
        }

        .activity-type {
            color: #666;
            font-size: 16px;
            margin: 10px 0;
        }

        .notes {
            background-color: #FFF3E0;
            padding: 15px;
            border-left: 3px solid #FF9800;
            margin: 10px 0;
            font-style: italic;
        }

        .meta-info {
            color: #999;
            font-size: 14px;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <h1>‚öΩ Sports Records for @ViewBag.StudentName</h1>

    <p><a href="/SportsRecord/Index">‚Üê Back to All Records</a></p>

    @if (Model.Count == 0)
    {
        <div class="summary-box">
            <h2>No sports records yet!</h2>
            <p>This student hasn't logged any sports activities yet.</p>
        </div>
    }
    else
    {


        var totalHours = Model.Sum(r => r.HoursSpent);
        var sports = Model.Select(r => r.SportName).Distinct().Count();


        <div class="summary-box">
            <h2>Sports Summary</h2>
            <p>üìä Total Records: <strong>@Model.Count</strong></p>
            <p>‚è±Ô∏è Total Hours: <strong>@totalHours hours</strong></p>
            <p>üèÜ Sports Played: <strong>@sports</strong></p>
        </div>

        @foreach (var record in Model.OrderByDescending(r => r.ActivityDate))
        {
            <div class="record-card">
                <div class="record-header">
                    <div class="sport-name">üèÜ @record.SportName</div>
                    <div class="hours-badge">‚è±Ô∏è @record.HoursSpent hours</div>
                </div>

                <div class="activity-type">
                    <strong>Activity Type:</strong> @record.ActivityType
                </div>

                @if (!string.IsNullOrEmpty(record.Notes))
                {
                    <div class="notes">
                        <strong>Notes:</strong> @record.Notes
                    </div>
                }

                <div class="meta-info">
                    üìÖ Activity on: @record.ActivityDate.ToString("MMMM dd, yyyy")
                </div>
            </div>
        }
    }
</body>
</html>
