@{
    ViewData["Title"] = "Sports Record";
}

<style>
    .sports-record-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 400px;
        padding: 40px;
    }

    .buttons-container {
        display: flex;
        flex-direction: row;
        gap: 60px;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    .action-button {
        background-color: #4054B5;
        border: none;
        border-radius: 30px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        font-weight: 600;
        width: 350px;
        height: 250px;
    }

    .action-button:hover {
        transform: translateY(-5px);
        background-color: #2f3f8f;
        box-shadow: 0 10px 30px rgba(64, 84, 181, 0.4);
        color: white;
        text-decoration: none;
    }

    .page-title {
        text-align: center;
        color: #333;
        margin-bottom: 80px;
        font-size: 36px;
        font-weight: 400;
    }
</style>

<div class="sports-record-container">
    <div style="width: 100%;">
        <h1 class="page-title">Sports Record Management</h1>

        <div class="buttons-container">
            <a href="/SportsRecord/Create" class="action-button">
                create sports<br>record
            </a>

            <a href="/Student/Index" class="action-button">
                View<br>Students
            </a>
        </div>
    </div>
</div>
