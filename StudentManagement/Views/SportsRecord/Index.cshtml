@{
    ViewData["Title"] = "Sports Record";
}

<style>
    .sports-record-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 400px;
        padding: 40px;
    }

    .buttons-container {
        display: flex;
        flex-direction: row;
        gap: 60px;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    .action-button {
        background-color: white;
        border: 2px solid #000;
        border-radius: 12px;
        padding: 40px 60px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s;
        text-decoration: none;
        color: #000;
        display: block;
        font-size: 18px;
        font-weight: 400;
        min-width: 180px;
    }

    .action-button:hover {
        transform: translateY(-3px);
        background-color: #f5f5f5;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        color: #000;
        text-decoration: none;
    }

    .page-title {
        text-align: center;
        color: #333;
        margin-bottom: 80px;
        font-size: 36px;
        font-weight: 400;
    }
</style>

<div class="sports-record-container">
    <div style="width: 100%;">
        <h1 class="page-title">Sports Record Management</h1>

        <div class="buttons-container">
            <a href="/SportsRecord/Create" class="action-button">
                create sports<br>record
            </a>

            <a href="/Student/Index" class="action-button">
                View<br>Students
            </a>
        </div>
    </div>
</div>
