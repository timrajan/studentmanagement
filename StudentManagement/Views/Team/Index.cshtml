@model List<StudentManagement.Models.Team>

<!DOCTYPE html>
<html>
<head>
    <title>All Teams</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            background-color: #f5f5f5;
        }
        
        h1 {
            color: #333;
            border-bottom: 3px solid #FF5722;
            padding-bottom: 10px;
        }
        
        .success-message {
            background-color: #4CAF50;
            color: white;
            padding: 15px;
            border-radius: 4px;
            margin-bottom: 20px;
        }
        
        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .create-btn {
            background-color: #FF5722;
            color: white;
            padding: 12px 25px;
            text-decoration: none;
            border-radius: 4px;
            font-weight: bold;
        }
        
        .create-btn:hover {
            background-color: #E64A19;
        }
        
        .team-card {
            background-color: white;
            padding: 25px;
            margin: 15px 0;
            border-left: 5px solid #FF5722;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .team-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }
        
        .team-name {
            font-size: 24px;
            font-weight: bold;
            color: #2c3e50;
        }
        
        .team-id {
            background-color: #FF5722;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 14px;
        }
        
        .team-description {
            color: #666;
            font-size: 16px;
            margin: 10px 0;
            padding: 10px;
            background-color: #f9f9f9;
            border-left: 3px solid #ddd;
        }
        
        .admins-section {
            margin-top: 15px;
            padding: 15px;
            background-color: #fff3e0;
            border-radius: 4px;
        }
        
        .admins-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }
        
        .admins-title {
            font-weight: bold;
            color: #E65100;
        }
        
        .add-admin-btn {
            background-color: #4CAF50;
            color: white;
            padding: 5px 15px;
            text-decoration: none;
            border-radius: 4px;
            font-size: 13px;
        }
        
        .add-admin-btn:hover {
            background-color: #45a049;
        }
        
        .admin-item {
            padding: 8px 12px;
            margin: 5px 0;
            background-color: white;
            border-left: 3px solid #4CAF50;
            border-radius: 3px;
        }
        
        .admin-name {
            font-weight: bold;
            color: #333;
        }
        
        .admin-email {
            color: #666;
            font-size: 14px;
        }
        
        .meta-info {
            color: #999;
            font-size: 14px;
            margin-top: 15px;
        }
        
        .no-teams {
            text-align: center;
            padding: 40px;
            color: #999;
        }
        
        .nav-links {
            margin: 20px 0;
        }
        
        .nav-links a {
            color: #2196F3;
            text-decoration: none;
            margin-right: 20px;
        }
    </style>
</head>
<body>
    <h1>üè¢ All Teams</h1>
    
    <div class="nav-links">
        <a href="/Student/Index">View Students</a>
        <a href="/StudyRecord/Index">View Study Records</a>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-message">
            ‚úÖ @TempData["SuccessMessage"]
        </div>
    }
    
    <div class="header-section">
        <p><strong>Total Teams: @Model.Count</strong></p>
        <a href="/Team/Create" class="create-btn">‚ûï Create New Team</a>
    </div>
    
    @if (Model.Count == 0)
    {
        <div class="no-teams">
            <p>No teams yet. Create your first team to get started!</p>
        </div>
    }
    else
    {
        @foreach (var team in Model.OrderByDescending(t => t.CreatedDate))
        {
            @* Get all admins for this team *@
            var teamAdminsList = ((List<StudentManagement.Models.TeamAdmin>)ViewBag.TeamAdmins)
                .Where(a => a.TeamId == team.Id)
                .ToList();
            
            <div class="team-card">
                <div class="team-header">
                    <div class="team-name">üèÜ @team.Name</div>
                    <div class="team-id">Team ID: @team.Id</div>
                </div>
                
                <div class="team-description">
                    üìù @team.Description
                </div>
                
                <div class="admins-section">
                    <div class="admins-header">
                        <div class="admins-title">
                            üë• Team Admins (@teamAdminsList.Count)
                        </div>
                        <a href="/Team/AddAdmin?teamId=@team.Id" class="add-admin-btn">
                            ‚ûï Add Admin
                        </a>
                    </div>
                    
                    @if (teamAdminsList.Count == 0)
                    {
                        <p style="color: #999;">No admins assigned yet.</p>
                    }
                    else
                    {
                        @foreach (var admin in teamAdminsList.OrderBy(a => a.AddedDate))
                        {
                            <div class="admin-item">
                                <div class="admin-name">üë§ @admin.Name</div>
                                <div class="admin-email">üìß @admin.Email</div>
                            </div>
                        }
                    }
                </div>
                
                <div class="meta-info">
                    üìÖ Created on: @team.CreatedDate.ToString("MMMM dd, yyyy")
                </div>
            </div>
        }
    }
</body>
</html>