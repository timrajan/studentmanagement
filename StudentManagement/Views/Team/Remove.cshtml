@{
    ViewData["Title"] = "Remove Team";
}

<style>
    .page-title {
        font-size: 32px;
        font-weight: bold;
        color: #000;
        margin-bottom: 60px;
    }

    .form-container {
        max-width: 600px;
    }

    .form-row {
        display: grid;
        grid-template-columns: 200px 1fr;
        gap: 40px;
        align-items: center;
        margin-bottom: 40px;
    }

    .form-label {
        font-size: 18px;
        font-weight: 500;
        color: #000;
    }

    .form-input {
        padding: 10px 15px;
        font-size: 16px;
        border: 2px solid #000;
        border-radius: 5px;
        background-color: white;
        color: #000;
        outline: none;
        width: 300px;
    }

    .form-input:focus {
        border-color: #000;
    }

    .remove-btn {
        background-color: white;
        color: #000;
        border: 2px solid #000;
        border-radius: 25px;
        padding: 12px 40px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
        margin-left: 240px;
        margin-top: 20px;
    }

    .remove-btn:hover {
        background-color: #000;
        color: white;
    }

    .error-message {
        background-color: #f44336;
        color: white;
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 25px;
    }

    .success-message {
        background-color: #4CAF50;
        color: white;
        padding: 15px;
        border-radius: 4px;
        margin-bottom: 25px;
    }
</style>

<h1 class="page-title">Remove Team</h1>

@if (ViewBag.Error != null)
{
    <div class="error-message">
        @ViewBag.Error
    </div>
}

@if (ViewBag.Success != null)
{
    <div class="success-message">
        @ViewBag.Success
    </div>
}

<form method="post" action="/Team/Remove" class="form-container">
    <div class="form-row">
        <label for="TeamName" class="form-label">Team Name</label>
        <input type="text"
               id="TeamName"
               name="TeamName"
               class="form-input"
               required />
    </div>

    <button type="submit" class="remove-btn">Remove Team</button>
</form>
