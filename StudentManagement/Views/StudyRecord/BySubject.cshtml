@model List<StudentManagement.Models.StudyRecord>

<!DOCTYPE html>
<html>
<head>
    <title>Study Records - @ViewBag.Subject</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 40px;
            background-color: #f5f5f5;
        }

        h1 {
            color: #333;
            border-bottom: 3px solid #2196F3;
            padding-bottom: 10px;
        }

        .record-card {
            background-color: white;
            padding: 20px;
            margin: 15px 0;
            border-left: 5px solid #2196F3;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .record-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .subject {
            font-size: 20px;
            font-weight: bold;
            color: #2c3e50;
        }

        .hours-badge {
            background-color: #4CAF50;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-weight: bold;
        }

        .topic {
            color: #666;
            font-size: 16px;
            margin: 10px 0;
        }

        .notes {
            background-color: #fffbea;
            padding: 15px;
            border-left: 3px solid #ffc107;
            margin: 10px 0;
            font-style: italic;
        }

        .meta-info {
            color: #999;
            font-size: 14px;
            margin-top: 10px;
        }

        .nav-links {
            margin: 20px 0;
        }

        .nav-links a {
            color: #2196F3;
            text-decoration: none;
            margin-right: 20px;
        }

        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <h1>Study Records - @ViewBag.Subject</h1>

    <div class="nav-links">
        <a href="/StudyRecord/SelectSubject">← Back to Subject Selection</a>
        <a href="/StudyRecord/Index">← Back to Study Record</a>
    </div>

    <div class="header-section">
        <p><strong>Total Records: @Model.Count</strong></p>
    </div>

    @if (Model.Count == 0)
    {
        <p>No study records found for @ViewBag.Subject.</p>
    }
    else
    {
        @foreach (var record in Model)
        {
            <div class="record-card">
                <div class="record-header">
                    <div class="subject">@record.FirstName @record.LastName</div>
                    <div class="hours-badge">@record.Team</div>
                </div>

                <div class="topic">
                    <strong>Email:</strong> @record.EmailAddress
                </div>

                <div class="notes">
                    <strong>Environment:</strong> @record.Environment |
                    <strong>Status:</strong> @record.Status
                </div>

                <div class="meta-info">
                    Student ID: @record.StudentInitialID |
                    Roll Number: @record.StudentRollNumber |
                    Recorded: @record.CreatedDate.ToString("MMMM dd, yyyy")
                </div>
            </div>
        }
    }
</body>
</html>
